@page "/ParentComponent"

<h3 class="text-danger">Parent Child Component</h3>
<CascadingValue Value="@messageForGrandChild" Name="MessageFromGrandParent">
	<CascadingValue Value="@LuckyNumber" Name="GrandParentsLuckyNumber">
		<ChildComponent OnClickBtnMethod="ShowMessage" Title="This title is passed as a parameter from the Parent Component">
			@*<ChildContent>Render Fragment from Parent</ChildContent>*@
			<DangerChildContent>Danger Content from Render Fragment</DangerChildContent>
		</ChildComponent>
	</CascadingValue>
</CascadingValue>
<AnotherChildComponent  placeholder = "Placeholder default" ></AnotherChildComponent>

<p><b>@messageText</b></p>

@code {

	private string messageForGrandChild="This is a message from Grand Parent";

	public string LuckyNumber { get; set; } = "7";

	private string messageText = "";
	private void ShowMessage(MouseEventArgs e)
	{
		messageText = "Blazzing text from parent";
	}
}
